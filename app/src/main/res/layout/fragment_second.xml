<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.yuhan.widget.AdvancedTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingTop="10dp"
        android:paddingEnd="8dp"
        android:paddingBottom="10dp"
        app:advancedTabIndicatorCornerRadius="2dp"
        app:advancedTabIndicatorHeight="4dp"
        app:advancedTabIndicatorWidth="20dp"
        app:advancedTabModeFixed="false"
        app:advancedTabPadding="7dp"
        app:advancedTabSelectedTextColor="#303030"
        app:advancedTabTextBold="false"
        app:advancedTabTextColor="#f5f5f5"
        app:advancedTabTextMaxScale="1"
        app:advancedTabTextSelectedBold="true"
        app:advancedTabTextSize="14sp" />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>